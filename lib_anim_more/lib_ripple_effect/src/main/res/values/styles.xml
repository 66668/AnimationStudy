<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ripple_Button">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:colorButtonNormal">@android:color/white</item>
    </style>

    <style name="ripple_Button_Borderless">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:colorButtonNormal">@android:color/holo_green_dark</item>
    </style>

    <style name="ripple_Button_BorderlessColored">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:colorButtonNormal">@android:color/darker_gray</item>
    </style>

</resources>
