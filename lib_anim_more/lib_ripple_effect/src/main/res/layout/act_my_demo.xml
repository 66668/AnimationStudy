<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.自定义样式演示：TextView(也适用于Button)" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#111111" />


        <TextView
            android:id="@+id/tv_01"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ripple_color01"
            android:clickable="true"
            android:gravity="center"
            android:text="自定义无边界-红色"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ripple_shape01"
            android:clickable="true"
            android:gravity="center"
            android:text="自定义-青色-有边界"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_03"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ripple_shape02"
            android:clickable="true"
            android:gravity="center"
            android:text="自定义-青色-边框"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/tv_04"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ripple_shape03"
            android:clickable="true"
            android:gravity="center"
            android:text="自定义-蓝色-边框：方式1"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/tv_05"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ripple_shape03"
            android:clickable="true"
            android:gravity="center"
            android:text="自定义-蓝色-边框：：方式2"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/tv_06"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ripple_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="自定义-selector"
            android:textSize="10sp" />


    </LinearLayout>
</ScrollView>
